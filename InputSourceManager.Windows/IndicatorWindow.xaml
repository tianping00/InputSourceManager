<Window x:Class="InputSourceManager.Windows.IndicatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#00000000"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Width="220" Height="72"
        Focusable="False">
    <Border CornerRadius="12" Background="#CC212121" Padding="12" BorderBrush="#33000000" BorderThickness="1">
        <TextBlock x:Name="TxtIndicator" Text="EN" Foreground="White" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Border>
</Window>

