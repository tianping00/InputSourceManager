<UserControl x:Class="InputSourceManager.Windows.Views.RulesPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 添加新规则区域 -->
        <GroupBox Grid.Row="0" Header="添加新规则" Margin="0,0,0,16">
            <Grid Margin="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="规则名称:" Style="{DynamicResource MaterialDesignBody1TextBlock}"/>
                <TextBox Grid.Row="1" Grid.Column="0" x:Name="TxtRuleName" 
                         Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                         Margin="0,8,8,0" materialDesign:HintAssist.Hint="例如: 代码编辑器使用英文"/>

                <TextBlock Grid.Row="0" Grid.Column="1" Text="规则类型:" Style="{DynamicResource MaterialDesignBody1TextBlock}"/>
                <ComboBox Grid.Row="1" Grid.Column="1" x:Name="CmbRuleType" 
                          Style="{DynamicResource MaterialDesignOutlinedComboBox}"
                          Margin="0,8,8,0" materialDesign:HintAssist.Hint="选择规则类型"/>

                <TextBlock Grid.Row="0" Grid.Column="2" Text="目标:" Style="{DynamicResource MaterialDesignBody1TextBlock}"/>
                <TextBox Grid.Row="1" Grid.Column="2" x:Name="TxtTarget" 
                         Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                         Margin="0,8,8,0" materialDesign:HintAssist.Hint="应用程序名或网站域名"/>

                <Button Grid.Row="1" Grid.Column="3" x:Name="BtnAddRule" Content="添加规则" 
                        Style="{DynamicResource MaterialDesignRaisedButton}"
                        VerticalAlignment="Bottom" Click="BtnAddRule_Click"/>
            </Grid>
        </GroupBox>

        <!-- 规则列表 -->
        <GroupBox Grid.Row="1" Header="现有规则" Margin="0,0,0,16">
            <DataGrid x:Name="DgRules" AutoGenerateColumns="False" 
                      IsReadOnly="True" Margin="16" CanUserAddRows="False"
                      SelectionMode="Single" SelectionChanged="DgRules_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="规则名称" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="类型" Binding="{Binding Type}" Width="80"/>
                    <DataGridTextColumn Header="目标" Binding="{Binding Target}" Width="*"/>
                    <DataGridTextColumn Header="目标输入法" Binding="{Binding TargetInputSource}" Width="*"/>
                    <DataGridTextColumn Header="优先级" Binding="{Binding Priority}" Width="60"/>
                    <DataGridTextColumn Header="状态" Binding="{Binding IsEnabled}" Width="60"/>
                    <DataGridTemplateColumn Header="操作" Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="编辑" Style="{DynamicResource MaterialDesignFlatButton}"
                                            Click="BtnEditRule_Click" Margin="0,0,4,0"/>
                                    <Button Content="删除" Style="{DynamicResource MaterialDesignFlatButton}"
                                            Click="BtnDeleteRule_Click"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- 配置管理 -->
        <GroupBox Grid.Row="2" Header="配置管理">
            <StackPanel Orientation="Horizontal" Margin="16">
                <Button x:Name="BtnExport" Content="导出配置" 
                        Style="{DynamicResource MaterialDesignRaisedButton}"
                        Margin="0,0,16,0" Click="BtnExport_Click"/>
                <Button x:Name="BtnImport" Content="导入配置" 
                        Style="{DynamicResource MaterialDesignRaisedButton}"
                        Margin="0,0,16,0" Click="BtnImport_Click"/>
                <Button x:Name="BtnReset" Content="重置配置" 
                        Style="{DynamicResource MaterialDesignRaisedButton}"
                        Click="BtnReset_Click"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</UserControl>

